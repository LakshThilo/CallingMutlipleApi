<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/iv_book_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_book_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="15dp"
            android:paddingBottom="10dp"
            android:lines="2"
            android:textSize="20sp"
            android:textAlignment="textStart"
            tools:text="Dawn of the Planet of the Apes xxxxxxxxxxxxxxxx"/>

        <TextView
            android:id="@+id/tv_book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title"
            app:layout_constraintStart_toEndOf="@id/iv_book_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="110dp"
            android:layout_marginStart="10dp"
            tools:text="publisher"/>
       <!-- <ImageView
            android:id="@+id/iv_book_rating_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/tv_book_publisher"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_movie_rating"
            app:layout_constraintBottom_toBottomOf="parent"/>
            &lt;!&ndash;android:src="@drawable/ic_star_rate_24"&ndash;&gt;-->
        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title"
            app:layout_constraintStart_toEndOf="@id/tv_book_publisher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:paddingEnd="30dp"
            tools:text="authors"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>